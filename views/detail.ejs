<!-- views/detail.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Email Detail</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f1f3f4;
            margin: 0;
            padding: 20px;
        }
        .email-container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 1px 3px rgba(60,64,67,.3);
            padding: 20px;
        }
        .email-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #dadce0;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .email-subject {
            font-size: 20px;
            font-weight: 500;
            margin: 0;
        }
        .email-info {
            color: #5f6368;
            font-size: 14px;
        }
        .email-content {
            white-space: pre-wrap;
            line-height: 1.6;
            margin-bottom: 20px;
        }
        .attachment {
            margin-top: 20px;
        }
        .attachment img {
            max-width: 100%;
            border-radius: 4px;
        }
        .reply-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #1a73e8;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }
        .reply-button:hover {
            background-color: #1669c1;
        }
        .back-link {
            display: inline-block;
            margin-top: 20px;
            text-decoration: none;
            color: #1a73e8;
        }
        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="email-header">
            <div>
                <h2 class="email-subject"><%= email.subject %></h2>
                <p class="email-info">From: <strong><%= email.senderEmail %></strong></p>
            </div>
            <div class="email-info">
                <span><%= new Date(email.sent_at).toLocaleString() %></span>
            </div>
        </div>
        <div class="email-content">
            <p><%= email.content %></p>
        </div>
        <% if (email.attachment) { %>
            <div class="attachment">
                <p>Attachment:</p>
                <% const fileExt = email.attachment.split('.').pop().toLowerCase(); %>  
                <% if (['png', 'jpg', 'jpeg', 'gif'].includes(fileExt)) { %>
                    <img src="/uploads/<%= email.attachment %>" alt="Attachment">
                <% } else { %>
                    <a href="/uploads/<%= email.attachment %>"><%= email.attachment %></a>
                <% } %>
            </div>
        <% } %>
        <a href="/emails/compose?to=<%= encodeURIComponent(email.from_user_id) %>&subject=<%= encodeURIComponent('Re: ' + email.subject) %>" class="reply-button">Reply</a>
        <br>
        <a href="/emails/inbox" class="back-link">&larr; Back to Inbox</a>
    </div>
</body>
</html>